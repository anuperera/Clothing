<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginback"
    tools:context=".SignUp">

    <!--Name-->

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="566dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="31dp"
        android:layout_marginTop="69dp"
        android:layout_marginBottom="96dp"
        android:background="@drawable/logobck2" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="0dp"
        android:background="#B7D7F5"
        android:padding="12dp"
        android:text="Rgister Yourself"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

    <com.google.android.material.textfield.TextInputLayout

        android:id="@+id/editTextName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="59dp"
        android:layout_marginTop="112dp"
        android:layout_marginEnd="59dp"
        android:background="@drawable/btnback">

        <EditText
            android:id="@+id/Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_person"
            android:drawablePadding="4dp"
            android:hint="Name (Min 3 characters)"
            android:inputType="text"
            android:padding="18dp"
            android:textSize="16sp"
            android:background="@drawable/btnback"/>


    </com.google.android.material.textfield.TextInputLayout>

    <!--Email-->
    <com.google.android.material.textfield.TextInputLayout

        android:id="@+id/emailTil"
        android:layout_marginTop="180dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="59dp"
        android:layout_marginEnd="59dp"
        >

    <EditText
        android:id="@+id/emailEt2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:drawableLeft="@drawable/ic_email"
        android:drawablePadding="4dp"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:padding="18dp"
        android:textSize="16sp"
        android:background="@drawable/btnback"/>

    </com.google.android.material.textfield.TextInputLayout>

    <!--Mobile Number-->
    <com.google.android.material.textfield.TextInputLayout

        android:id="@+id/editMobile"
        android:layout_marginTop="248dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="59dp"
        android:layout_marginEnd="59dp"
        >

        <EditText
            android:id="@+id/Mobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_phone"
            android:drawablePadding="4dp"
            android:hint="Mobile Number (10 digits)"
            android:inputType="number"
            android:padding="18dp"
            android:textSize="16sp"
            android:background="@drawable/btnback"/>

    </com.google.android.material.textfield.TextInputLayout>

    <!--location-->
    <com.google.android.material.textfield.TextInputLayout

        android:id="@+id/editLocation"
        android:layout_marginTop="316dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="59dp"
        android:layout_marginEnd="59dp"
        >

        <EditText
            android:id="@+id/Location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_location"
            android:drawablePadding="4dp"
            android:hint="Delivery Address"
            android:inputType="text"
            android:padding="18dp"
            android:textSize="16sp"
            android:background="@drawable/btnback"/>

    </com.google.android.material.textfield.TextInputLayout>

    <!--Password-->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/passwordTil"
        android:layout_marginTop="384dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="59dp"
        android:layout_marginEnd="59dp"
        >

        <EditText
            android:id="@+id/passwordEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableLeft="@drawable/ic_lock"
            android:drawablePadding="4dp"
            android:hint="Password"
            android:inputType="text"
            android:padding="18dp"
            android:textSize="16sp"
            android:background="@drawable/btnback"/>


    </com.google.android.material.textfield.TextInputLayout>

    <!--Confirm Password-->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/ConfirmTil"
        android:layout_marginTop="452dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="59dp"
        android:layout_marginEnd="59dp"
        >

        <EditText
            android:id="@+id/ConfirmEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_lock"
            android:drawablePadding="4dp"
            android:hint="Confirm Password"
            android:inputType="text"
            android:padding="18dp"
            android:textSize="16sp"
            android:background="@drawable/btnback"/>


    </com.google.android.material.textfield.TextInputLayout>

    <!--Register Button-->
    <ImageButton
        android:id="@+id/RegBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ConfirmTil"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="59dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="59dp"
        android:background="@drawable/reg"
        android:text="Register" />


</RelativeLayout>