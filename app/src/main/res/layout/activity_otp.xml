<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginback"
    tools:context=".OTP">

    <ImageView
        android:id="@+id/imageViewAppIcon"
        android:layout_width="206dp"
        android:layout_height="219dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="102dp"
        android:layout_marginTop="29dp"
        android:layout_marginEnd="103dp"
        android:layout_marginBottom="30dp"
        android:padding="60dp"
        android:src="@drawable/shopping_app_logo_1" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="452dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="28dp"
        android:layout_marginTop="273dp"
        android:layout_marginBottom="7dp"
        android:background="@drawable/logobck2" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="160dp"
        android:layout_marginTop="309dp"
        android:text="Enter OTP"
        android:textAlignment="center"
        android:textColor="#040404"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="245dp"
        android:layout_height="38dp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="343dp"
        android:text="please enter the 4 digits code send to your mobile number"
        android:textAlignment="center" />

    <!--OTP Number-->


    <!--Password-->

    <com.google.android.material.textfield.TextInputLayout

        android:id="@+id/ediOtp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="405dp"
        android:layout_marginStart="59dp"
        android:layout_marginEnd="59dp"
        android:layout_marginBottom="274dp">

        <EditText
            android:id="@+id/OTPet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="OTP(Min 4)"
            android:inputType="number"
            android:background="@drawable/btnback"/>


    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout

        android:id="@+id/passwordTil"
        android:layout_marginTop="465dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="59dp"
        android:layout_marginEnd="59dp"
        app:passwordToggleEnabled ="true">

        <EditText
            android:id="@+id/passwordEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="password"
            tools:ignore="HardcodedText"
            android:background="@drawable/btnback"/>

    </com.google.android.material.textfield.TextInputLayout>


    <!--Confirm Password-->
    <com.google.android.material.textfield.TextInputLayout

        android:id="@+id/ConfirmTil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="59dp"
        android:layout_marginEnd="59dp"
        android:layout_marginTop="528dp"
        app:passwordToggleEnabled ="true">

        <EditText
            android:id="@+id/ConfirmEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Confirm password"
            tools:ignore="HardcodedText"
            android:background="@drawable/btnback"/>

    </com.google.android.material.textfield.TextInputLayout>

    <!--Login Button-->
    <ImageButton
        android:id="@+id/SubBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="59dp"
        android:layout_marginTop="595dp"
        android:layout_marginEnd="59dp"
        android:background="@drawable/submit" />
</RelativeLayout>